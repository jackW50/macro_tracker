<% meal.meal_compositions.each do |meal_composition| %>

  <%= content_tag :li do %>
    <%= link_to meal_composition.food.name, food_path(meal_composition.food.id), class: "food-link" %>
    <%= tag :br %>
    <%= "Servings: #{meal_composition.food_servings}" %>
  <% end %>

  <%= content_tag :li do %>
    <%= button_to "remove", meal_path(meal), form_class: "remove-food", method: :patch, params: {:meal => {:remove_food => meal_composition.id}, data: {confirm: "Are you sure you want to remove #{meal_composition.food.name}?"}} %>
  <% end %>

<% end %>
