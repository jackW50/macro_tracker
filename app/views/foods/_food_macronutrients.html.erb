<% macronutrients.each do |macronutrient| %>

  <%= errors_present?(food) do %>
    <%= label_tag macronutrient.category %>
      <%= check_box_tag "food[macronutrients_grams[][id]", macronutrient.id, checked?(food, macronutrient) %>
      <%= label_tag "Grams:" %>
      <%= text_field_tag "food[macronutrients_grams][][grams]", food_grams?(food, macronutrient) %>
  <% end %>
<% end %>
